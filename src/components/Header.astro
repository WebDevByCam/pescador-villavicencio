---
// Header Component
---

<header>
  <!-- Header Top -->
  <div class="header-top">
    <div class="header-info">
      <span class="header-contact">
        <a href="tel:+573143352544"><i class="fas fa-headset" aria-hidden="true"></i> Llamanos: +57 314 335 2544</a>
      </span>
      <span class="header-email">
        <a href="mailto:pescadorvillavicencio@gmail.com"><i class="fas fa-envelope" aria-hidden="true"></i> pescadorvillavicencio@gmail.com</a>
      </span>
      <span class="header-address">
        <i class="fas fa-map-marker-alt" aria-hidden="true"></i> Cra 29a 45-80 Villavicencio Meta
      </span>
    </div>
    <div class="header-social">
      <a href="https://www.instagram.com/pescadorvillavicencio" target="_blank" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
      <a href="https://www.facebook.com/PescadorVillavicencio/" target="_blank" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
    </div>
  </div>
  <!-- Header Main -->
  <div class="header-main">
    <div class="logo">
      <h1><span class="logo-ristorante">Restaurante</span> PESCADOR</h1>
      <p>La mejor comida de mar</p>
    </div>
    <nav role="navigation" aria-label="Navegación principal">
      <button class="hamburger" aria-expanded="false" aria-label="Abrir menú de navegación">
        <i class="fas fa-bars"></i>
      </button>
      <ul class="nav-links">
        <li><a href="#about">Restaurante</a></li>
        <li><a href="#menu">Menú</a></li>
        <li><a href="#reservas">Reservas</a></li>
        <li><a href="#info">Información</a></li>
      </ul>
    </nav>
  </div>
</header>

<script>
  // Hamburger menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const hamburger = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.nav-links');

    hamburger.addEventListener('click', () => {
      const isExpanded = hamburger.getAttribute('aria-expanded') === 'true';
      hamburger.setAttribute('aria-expanded', (!isExpanded).toString());
      navLinks.classList.toggle('active');
      hamburger.innerHTML = isExpanded ? '<i class="fas fa-bars"></i>' : '<i class="fas fa-times"></i>';
    });
  });
</script>